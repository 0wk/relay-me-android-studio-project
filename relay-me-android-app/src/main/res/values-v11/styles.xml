<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="listitems">
        <item name="android:background">?android:attr/activatedBackgroundIndicator</item>
    </style>

    <style name="dialoglayout">
        <item name="android:divider">?android:attr/dividerHorizontal</item>
    </style>

    <style name="buttonbar" parent="@android:style/Holo.Light.ButtonBar.AlertDialog"></style>

    <style name="buttonbarbutton" parent="@android:style/Widget.Holo.Button.Borderless">
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="actionbutton" parent="@android:style/Widget.Holo.Button.Borderless">
        <item name="android:background">@color/complementary_color</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="imagebutton" parent="@android:style/Widget.Holo.Button.Borderless">
        <item name="android:focusable">false</item>
        <item name="android:clickable">true</item>
        <item name="android:scaleType">center</item>
    </style>

</resources>